<UserControl x:Class="MayatoniaDisplay.NetworkStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MayatoniaDisplay"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
            <Label Name="lblDisplayName"  Content="Display #1"  HorizontalContentAlignment="Right" FontWeight="Bold"  Margin="0 0 0 0" Width="160" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Right" />
            <Border Name="borderStatus" CornerRadius="20" Width="40" BorderBrush="Black" BorderThickness="1" Background="Red" Margin="0,3,0,4"/>
        </StackPanel>
    </Grid>
</UserControl>
